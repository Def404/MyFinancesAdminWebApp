@page
@model MyFinancesAdminWebApp.Pages.Banks.EditModel

<h4>Банк | @Model.Bank.Name</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Bank.BankId" />
            <div class="form-group">
                <label asp-for="Bank.Name" class="control-label"></label>
                <input asp-for="Bank.Name" class="form-control" />
                <span asp-validation-for="Bank.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Bank.Colour" class="control-label"></label>
                <input asp-for="Bank.Colour" class="form-control" />
                <span asp-validation-for="Bank.Colour" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Сохранить" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Назад к списку</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

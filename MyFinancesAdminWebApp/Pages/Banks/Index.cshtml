@page
@model MyFinancesAdminWebApp.Pages.Banks.IndexModel

<p>
    <a asp-page="Create">Добавить</a>
</p>
<table class="table">
    <thead>
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Bank[0].Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Bank[0].Colour)
        </th>
        <th></th>
    </tr>
    </thead>
    <tbody>
    @foreach (var item in Model.Bank) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Colour)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.BankId">Изменить</a> |
                <a asp-page="./Details" asp-route-id="@item.BankId">Подробнее</a> |
                <a asp-page="./Delete" asp-route-id="@item.BankId">Удалить</a>
            </td>
        </tr>
    }
    </tbody>
</table>
<p>@DateTime.Now</p>

<script>
setTimeout(function (){
    location.reload();
},  30000);
</script>
